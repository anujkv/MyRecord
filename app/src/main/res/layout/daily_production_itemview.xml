<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4dp"
        android:elevation="@dimen/margin12dp"
        app:cardCornerRadius="@dimen/margin4dp"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:padding="@dimen/margin4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin2dp">
            <TextView
                android:id="@+id/IDTV"
                android:layout_width="0dp"
                android:layout_weight=".05"
                android:padding="@dimen/margin4dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/employeeIDTV"
                android:layout_width="@dimen/margin0dp"
                android:layout_weight=".15"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/DateIDTV"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/productIDTV"
                android:layout_width="@dimen/margin0dp"
                android:layout_weight=".15"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/priceIDTV"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/qtyTV"
                android:layout_width="@dimen/margin0dp"
                android:layout_weight=".15"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/totalTV"
                android:layout_width="@dimen/margin0dp"
                android:layout_weight=".15"
                android:padding="@dimen/margin4dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</com.balysv.materialripple.MaterialRippleLayout>